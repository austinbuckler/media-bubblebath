body
  padding: 50px
  font: 19px "Lucida Grande", Helvetica, Arial, sans-serif


a
  color: #00B7FF;

#bg-overlay
  position:fixed
  top:0
  left:0
  width:100%
  height:100%
  z-index:0
  opacity:0.7
  background-image:-webkit-linear-gradient(315deg, rgb(82, 237, 199), rgb(90, 200, 251))
  background-size:cover
  
.nodeMap
  width:400px
  height:200px

#title
  position:fixed
  top:20%
  font-family:'Helvetica'
  font-size:15em
  color:white
  font-weight:100
  opacity:0.4
  z-index:0
  text-align:right
  margin-right:50px

ul
  list-style:none

  -webkit-animation-name: moveUp;
  -webkit-animation-iteration-count: 1;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-duration: 1s;

  animation-name: moveUp;
  animation-iteration-count: 1;
  animation-timing-function: ease-in-out;
  animation-duration: 1s;

.bubble
  width:100px
  height:100px
  border:1px solid rgba(255,255,255,0.8)
  border-radius:50%
  display:inline-block
  z-index:5
  margin:50px

  -webkit-animation-name: bounce;
  -webkit-animation-iteration-count: infinite;
  -webkit-animation-timing-function: ease-in-out;
  -webkit-animation-duration: 1s;

  animation-name: bounce;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
  animation-duration: 1s;

.innerbubble
  width:100px
  height:100px
  left:0px
  top:0px
  z-index:10
  border-radius:50%
  //background:rgba(209,238,252,0.8)
  background:rgba(255,255,255,0.6)

  -webkit-transform:scale(0)
  transform:scale(0)

  -webkit-transition: all 0.2s 0 ease-in-out;
  -moz-transition: all 0.2s 0s ease-in-out;
  -ms-transition: all 0.2s 0 ease-in-out;
  -o-transition: all 0.2s 0 ease-in-out;
  transition: all 0.2s 0 ease-in-out;

.bubble:hover .innerbubble
  -webkit-transform:scale(0.9)
  transform:scale(0.9)

.bubble:hover .outerbubble
  opacity:1
  pointer-events:auto

.outerbubble
  position:absolute
  margin:0 auto
  background:#EEEEEE
  width:200px
  min-height:150px
  top:130px
  opacity:0
  z-index:9999
  pointer-events:none
  border: 1px solid #DADFE1
  text-align:center

  -webkit-transition: all 0.5s 0 ease-in-out;
  -moz-transition: all 0.5s 0s ease-in-out;
  -ms-transition: all 0.5s 0 ease-in-out;
  -o-transition: all 0.5s 0 ease-in-out;
  transition: all 0.5s 0 ease-in-out;

.outerbubble:after, .outerbubble:before {
  bottom: 100%;
  left: 50px;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}

.outerbubble:after {
  border-color: rgba(123, 238, 238, 0);
  border-bottom-color:#EEEEEE;
  border-width: 15px;
  margin-left: -15px;
}
.outerbubble:before {
  border-color: rgba(123, 173, 254, 0);
  border-bottom-color:#DADFE1;
  border-width: 16px;
  margin-left: -16px;
}

.outerbubble img
  margin:0 auto
  width:150px
  padding:25px
  height:auto
.outerbubble p
  color:#6C7A89
  width:180px
  line-height:1px
  white-break:normal
  font-size:1em
  padding:10px
  padding-top:0px
  padding-bottom:2px

.form
  position:fixed
  top:50px
  right:10%
.search
  background:none
  width:500px
  height:30px
  border:none
  border-bottom:1px solid white
  border-radius:2px
  color:white
  font-size:1.3em
.search:focus
  outline:none
.button
  background:none
  width:100px
  min-height:20px
  color:white
  font-size:1.5em
  margin-left:20px
  border:none
  outline:none











@-webkit-keyframes moveUp {
    0% {
        -webkit-transform: translateY(100vh);
    }
    100% {
        -webkit-transform: translateY(0);
    }
}
@keyframes moveUp {
    0% {
        transform: translateY(100vh);
    }
    100% {
        transform: translateY(0);
    }
}

@-webkit-keyframes bounce {
    0% {
        -webkit-transform: translateY(10px);
    }
    50%{
        -webkit-transform: translateY(0);
    }
    100% {
        -webkit-transform: translateY(10px);
    }
}
@keyframes bounce {
    0% {
        -webkit-transform: translateY(10px);
    }
    50%{
        -webkit-transform: translateY(0);
    }
    100% {
        -webkit-transform: translateY(10px);
    }
}





